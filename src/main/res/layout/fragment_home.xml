<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/research_fragmenthome"
                android:gravity="center"
                android:text="搜索"/>

            <com.youth.banner.Banner
                android:id="@+id/banner_Home"
                android:layout_width="match_parent"
                android:layout_height="220dp"></com.youth.banner.Banner>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@android:color/background_light"
                android:gravity="center_vertical"
                android:text="  科目分类"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="352dp"
                android:background="@android:color/background_light"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button_chinese"
                        android:layout_width="match_parent"
                        android:layout_height="117dp"
                        android:background="@drawable/chinese_icon_fragmenthome"/>

                    <Button
                        android:id="@+id/button_physics"
                        android:layout_width="match_parent"
                        android:layout_height="117dp"
                        android:layout_weight="1"
                        android:background="@drawable/physics_icon_fragmenthome"/>

                    <Button
                        android:id="@+id/button_history"
                        android:layout_width="match_parent"
                        android:layout_height="117dp"
                        android:layout_weight="1"
                        android:background="@drawable/history_icon_fragmenthome"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <Button
                        android:id="@+id/button_maths"
                        android:layout_width="match_parent"
                        android:layout_height="117dp"
                        android:layout_weight="1"
                        android:background="@drawable/maths_icon_fragment"/>

                    <Button
                        android:id="@+id/button_chemistry"
                        android:layout_width="match_parent"
                        android:layout_height="117dp"
                        android:layout_weight="1"
                        android:background="@drawable/chemistry_icon_fragmenthome"/>

                    <Button
                        android:id="@+id/button_politics"
                        android:layout_width="match_parent"
                        android:layout_height="117dp"
                        android:layout_weight="1"
                        android:background="@drawable/politics_icon_fragmenthome"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button_english"
                        android:layout_width="match_parent"
                        android:layout_height="117dp"
                        android:layout_weight="1"
                        android:background="@drawable/english_icon_fragment"/>

                    <Button
                        android:id="@+id/button_biology"
                        android:layout_width="match_parent"
                        android:layout_height="117dp"
                        android:layout_weight="1"
                        android:background="@drawable/biology_icon_fragmenthome"/>

                    <Button
                        android:id="@+id/button_geography"
                        android:layout_width="match_parent"
                        android:layout_height="117dp"
                        android:layout_weight="1"
                        android:background="@drawable/geography_icon_fragment"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>